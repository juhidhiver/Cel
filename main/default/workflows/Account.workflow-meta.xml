<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Clearance_Email_sent_by_Level_1</fullName>
        <description>Clearance Email sent by Level 1</description>
        <protected>false</protected>
        <recipients>
            <field>Review_Requested_By__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>AQ_email_templates/Clearing_Sanctions_Failure_AQ</template>
    </alerts>
    <alerts>
        <fullName>Clearance_Email_sent_by_Senior</fullName>
        <ccEmails>juhi.dhiver@innovisk.global</ccEmails>
        <description>Clearance Email sent by Senior (Celerity)</description>
        <protected>false</protected>
        <recipients>
            <recipient>Cel_Clear_Sanctions_Request</recipient>
            <type>group</type>
        </recipients>
        <recipients>
            <field>Review_Requested_By__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Celerity_Email_Folder/Clearing_Sanctions_Failure_Cel</template>
    </alerts>
    <alerts>
        <fullName>Decline_Email_sent_by_Level_1</fullName>
        <description>Decline Email sent by Level 1</description>
        <protected>false</protected>
        <recipients>
            <field>Review_Requested_By__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>AQ_email_templates/Confirm_Sanction_Action_AQ</template>
    </alerts>
    <alerts>
        <fullName>Decline_Sanction_Email_for_Celerity</fullName>
        <ccEmails>juhi.dhiver@innovisk.global</ccEmails>
        <description>Decline Sanction Email for Celerity</description>
        <protected>false</protected>
        <recipients>
            <field>Review_Requested_By__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Celerity_Email_Folder/Confirm_Sanction_Action_Celerity</template>
    </alerts>
    <rules>
        <fullName>To send Email on Declining Sanction</fullName>
        <actions>
            <name>Decline_Email_sent_by_Level_1</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <formula>AND( Text(PRIORVALUE(AQ_Sanction_Status__c)) == &apos;Potential Match&apos;, 				ispickval(AQ_Sanction_Status__c,&apos;Failed&apos;) 				)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>To send email on Clearing Sanctions By Level 1</fullName>
        <actions>
            <name>Clearance_Email_sent_by_Level_1</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <formula>AND( Text(PRIORVALUE(AQ_Sanction_Status__c)) == &apos;Potential Match&apos;, ispickval(AQ_Sanction_Status__c,&apos;Cleared&apos;) )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
