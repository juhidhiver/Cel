<aura:component access="global">
	<aura:attribute name="FormType" type="String" default="Validation"/>
    <aura:attribute name="rowId" type="Id"/>
	<aura:attribute name="message" type="String"/>
    <aura:registerEvent name="appEvent" type="c:DeleteConfirmationEvent"/>
  	<aura:handler name="init" value="{!this}" action="{!c.doInit}"/>  
	<!-- -->
	<lightning:overlayLibrary aura:id="overlayLib"/>

	<aura:if isTrue="{!v.count!=0}">
		<div class="slds-align_absolute-center">
			
			<div class="slds-m-around--xx-large">
				<h3 >{!v.message}</h3>
				<br/><br/>
				<lightning:button aura:id="btnDefault" name="cancel" label="Cancel" onclick="{!c.handleCancel}"/>
    			<aura:if isTrue="{!v.FormType != 'Validation' }">
					<lightning:button name="ok" label="OK" variant="brand" onclick="{!c.handleOK}"/>
				</aura:if>
  			</div>
        
		</div>
    </aura:if>   
    
</aura:component>